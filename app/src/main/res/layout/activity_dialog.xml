<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.js_park.mylocation2.DialogActivity">

    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름 : " />

        <EditText
            android:id="@+id/markkerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:singleLine="true" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위도 : " />

        <EditText
            android:id="@+id/markerLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="여기에 사이트 이름을 입력하세요"
            android:selectAllOnFocus="true"
            android:singleLine="true" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="경우 : " />

        <EditText
            android:id="@+id/markerLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="여기에 사이트 이름을 입력하세요"
            android:selectAllOnFocus="true"
            android:singleLine="true" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/addOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="추가" />

        <Button
            android:id="@+id/addCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소" />
    </LinearLayout>
</TableLayout>
